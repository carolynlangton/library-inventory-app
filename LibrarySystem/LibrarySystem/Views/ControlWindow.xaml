<Window x:Class="LibrarySystem.ControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibrarySystem"
        mc:Ignorable="d"
        Title="{Binding Path=DisplayName}" Height="300" Width="300" SizeToContent="WidthAndHeight">
    <Grid>
        <ContentControl Content="{Binding Path=ControlWindowContent}" />
    </Grid>
</Window>
